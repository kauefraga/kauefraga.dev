---
import '@fontsource/jetbrains-mono';
import '@fontsource/rubik/300.css';
import '@fontsource/rubik/400.css';
import '@fontsource/rubik/500.css';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content={description ??
        'Conheça o Kauê, um desenvolvedor de software focado em construir aplicações funcionais e robustas.'}
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="alternate"
      type="application/rss+xml"
      title="Kauê Fraga Rodrigues"
      href={new URL('rss.xml', Astro.site)}
    />
    <script
      is:inline
      async
      src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-7963046428841799"
      crossorigin="anonymous"></script>
    <link rel="icon" href="/favicon.ico" />
    <title>{title}</title>
  </head>
  <body class="mx-auto max-w-5xl">
    <div class="grid min-h-[100dvh] grid-rows-[auto_1fr_auto] px-6 py-3">
      <Header />
      <slot />
      <Footer />
    </div>
  </body>
</html>
