---
import { ReactTyped } from 'react-typed';
import Card from '../components/Card.astro';
import Layout from '../layouts/Layout.astro';

import { Image } from 'astro:assets';
import Kaue from '../assets/kaue.png';
---

<Layout title="Kauê Fraga Rodrigues">
  <main class="my-16 flex h-full flex-grow flex-col items-center gap-10">
    <header class="flex flex-col items-center gap-2">
      <Image
        class="max-h-40 max-w-40 rounded-full"
        src={Kaue}
        alt="Imagem de perfil do Kauê"
        loading="eager"
      />
      <h1 class="text-2xl font-medium lg:text-3xl">Kauê Fraga Rodrigues</h1>
      <ReactTyped
        className="text-violet-800"
        strings={[
          'Desenvolvedor de Software',
          'Mago do Código',
          'Desenvolvedor Back-end',
          'Eterno aprendiz',
          'Entusiasta Rust',
          'Go',
          'TypeScript',
        ]}
        typeSpeed={90}
        loop
        client:visible
      />
    </header>

    <ul class="space-y-4">
      <Card href="https://constantia.kauefraga.dev/"
        >Constantia, acompanhador de hábitos</Card
      >
      <Card href="https://themis.kauefraga.dev/"
        >Themis, avaliador de perfil do Bluesky</Card
      >
      <Card href="https://dev.to/kauefraga/aprenda-a-fazer-um-readme-4n36">
        Série sobre markdown e READMEs
      </Card>
      <Card href="https://github.com/kauefraga/my-dotfiles">
        Minhas configurações
      </Card>
      <Card href="https://www.pixme.bio/kauefraga">Me apoie um café</Card>
    </ul>
  </main>
</Layout>
